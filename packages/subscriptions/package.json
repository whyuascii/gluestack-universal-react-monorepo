{
  "name": "@app/subscriptions",
  "version": "0.0.0",
  "description": "Subscription management with support for multiple providers (Polar, RevenueCat, and more)",
  "keywords": [
    "subscriptions",
    "revenuecat",
    "polar",
    "monetization",
    "paywall",
    "react",
    "react-native"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "swc src -d dist --strip-leading-paths --copy-files --watch",
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck --noEmit false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@polar-sh/sdk": "^0.30.0",
    "@revenuecat/purchases-js": "^1.23.0",
    "react-native-purchases": "^8.2.3",
    "standardwebhooks": "^1.0.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "eslint": "^9.18.0",
    "@app/eslint-config": "workspace:*",
    "@app/tailwind-config": "workspace:*",
    "typescript": "^5.9.3",
    "@app/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "@app/analytics": "workspace:*",
    "@app/components": "workspace:*",
    "@app/config": "workspace:*",
    "@app/core-contract": "workspace:*",
    "@app/database": "workspace:*",
    "@app/i18n": "workspace:*",
    "react-i18next": "^15",
    "react-native": "*",
    "react": "^18",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
