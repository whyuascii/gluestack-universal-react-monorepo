{
  "name": "utils",
  "version": "1.0.0",
  "description": "Isomorphic utility functions for TypeScript, Zod validation, and URL building",
  "keywords": [
    "utils",
    "utilities",
    "helpers",
    "zod",
    "typescript"
  ],
  "author": "whyuascii <eddy@whyuascii.com>",
  "license": "ISC",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "test": "TZ=UTC vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dompurify": "^3.2.4",
    "lodash": "^4.17.21",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/lodash": "^4.17.0",
    "@vitest/coverage-v8": "^4.0.15",
    "jsdom": "^27.3.0",
    "typescript": "^5.9.3",
    "typescript-config": "workspace:*",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
