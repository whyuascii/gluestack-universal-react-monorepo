{
  "name": "@app/utils",
  "version": "1.0.0",
  "description": "Isomorphic utility functions for TypeScript, Zod validation, and URL building",
  "keywords": [
    "utils",
    "utilities",
    "helpers",
    "zod",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "dev": "pnpm run build:swc -- --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist",
    "test": "TZ=UTC vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dompurify": "^3.2.4",
    "lodash": "^4.17.23",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/lodash": "^4.17.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.18.0",
    "@app/eslint-config": "workspace:*",
    "jsdom": "^27.3.0",
    "typescript": "^5.9.3",
    "@app/typescript-config": "workspace:*",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
