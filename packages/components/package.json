{
  "name": "@app/components",
  "version": "0.0.0",
  "type": "module",
  "description": "Cross-platform UI components built with gluestack-v3 and NativeWind",
  "keywords": [
    "react",
    "react-native",
    "components",
    "ui",
    "gluestack",
    "nativewind"
  ],
  "author": "whyuascii <eddy@whyuascii.com>",
  "license": "ISC",
  "private": true,
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@expo/html-elements": "^0.12.5",
    "@gorhom/bottom-sheet": "^5.2.6",
    "@legendapp/motion": "^2.4.0",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^3.1.0",
    "@app/service-contracts": "workspace:*"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/react": "^19.1.0",
    "eslint": "^9.18.0",
    "@app/eslint-config": "workspace:*",
    "typescript": "^5.9.3",
    "@app/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "@gluestack-ui/core": "^3.0.10",
    "@gluestack-ui/utils": "^3.0.11",
    "expo": ">=54.0.0",
    "nativewind": ">=4.0.0",
    "react": "workspace:*",
    "react-dom": "workspace:*",
    "react-native": "^*",
    "react-native-reanimated": ">=4",
    "react-native-svg": ">=15.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
