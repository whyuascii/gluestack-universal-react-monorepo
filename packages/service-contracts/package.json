{
  "name": "service-contracts",
  "version": "1.0.0",
  "description": "Zod-based service contracts for type-safe API communication between frontend and backend",
  "keywords": [
    "contracts",
    "zod",
    "validation",
    "api",
    "types"
  ],
  "author": "whyuascii <eddy@whyuascii.com>",
  "license": "ISC",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "typescript": "^5.9.3",
    "typescript-config": "workspace:*",
    "utils": "workspace:*"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
