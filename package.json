{
  "name": "universal-react-monorepo",
  "version": "1.0.0",
  "description": "Cross-platform React monorepo using Turborepo, pnpm, Next.js, and Expo",
  "keywords": [
    "monorepo",
    "react",
    "react-native",
    "nextjs",
    "expo",
    "turborepo"
  ],
  "author": "whyuascii <whyuascii@gmail.com>",
  "license": "ISC",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@app/api...",
    "dev:web": "turbo dev --filter=@app/web...",
    "dev:mobile": "turbo dev --filter=@app/mobile...",
    "dev:admin": "turbo dev --filter=@app/admin...",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "env:check": "npx tsx scripts/validate-env.ts",
    "db:migrate": "pnpm --filter database db:migrate",
    "db:studio": "pnpm --filter database db:studio",
    "db:generate": "pnpm --filter database generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.0",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-native": "0.81.4",
      "react-native-web": "0.21.1",
      "tailwindcss": "3.4.17",
      "tailwind-merge": "3.4.0",
      "nativewind": "4.2.1",
      "typescript": "5.9.3",
      "zod": "4.1.3",
      "@swc/cli": "0.6.0",
      "@swc/core": "1.10.6",
      "drizzle-orm": "0.44.7",
      "drizzle-zod": "0.7.0",
      "vitest": "4.0.15",
      "@vitest/coverage-v8": "4.0.15",
      "@types/node": "24.10.2",
      "date-fns": "4.1.0",
      "date-fns-tz": "3.2.0",
      "dotenv": "17.2.3",
      "jsdom": "27.3.0",
      "pino": "10.1.0",
      "fastify": "5.6.2",
      "fastify-type-provider-zod": "6.1.0",
      "posthog-js": "1.329.0",
      "lodash": "4.17.23"
    }
  },
  "dependencies": {
    "zod-to-json-schema": "^3.25.1"
  }
}
