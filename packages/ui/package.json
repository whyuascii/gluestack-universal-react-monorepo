{
  "name": "@app/ui",
  "version": "0.0.0",
  "description": "Cross-platform business logic layer: screens, hooks, Zustand stores, and oRPC API client for web and mobile",
  "keywords": [
    "ui",
    "screens",
    "hooks",
    "zustand",
    "orpc",
    "tanstack-query",
    "react",
    "react-native",
    "cross-platform"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./web": {
      "types": "./src/web.ts",
      "default": "./dist/web.js"
    },
    "./screens": {
      "types": "./src/screens/index.ts",
      "default": "./dist/screens/index.js"
    },
    "./analytics": {
      "types": "./src/analytics/index.ts",
      "default": "./dist/analytics/index.js"
    },
    "./analytics-web": {
      "types": "./src/analytics/web.tsx",
      "default": "./dist/analytics/web.js"
    },
    "./analytics-native": {
      "types": "./src/analytics/native.tsx",
      "default": "./dist/analytics/native.js"
    },
    "./notifications-web": {
      "types": "./src/notifications/index.ts",
      "default": "./dist/notifications/index.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "swc src -d dist --strip-leading-paths --copy-files --watch",
    "build": "pnpm run build:swc",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@app/core-contract": "workspace:*",
    "@orpc/client": "^1.0.0",
    "@orpc/contract": "^1.0.0",
    "@orpc/openapi-client": "^1.0.0",
    "@orpc/tanstack-query": "^1.0.0",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/tailwind-config": "workspace:*",
    "@app/typescript-config": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "eslint": "^9.18.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@app/analytics": "workspace:*",
    "@app/auth": "workspace:*",
    "@app/components": "workspace:*",
    "@app/notifications": "workspace:*",
    "@app/subscriptions": "workspace:*",
    "@react-native-async-storage/async-storage": "^2",
    "@tanstack/react-query": "^5",
    "lucide-react-native": "^0.545.0",
    "react": "^18 || ^19",
    "react-i18next": "^15",
    "react-native": "*"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
