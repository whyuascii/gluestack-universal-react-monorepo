{
  "name": "@app/api",
  "version": "1.0.0",
  "type": "module",
  "description": "Fastify API server with Zod validation and PostgreSQL database",
  "keywords": [
    "api",
    "fastify",
    "backend",
    "zod",
    "postgresql"
  ],
  "author": "whyuascii <eddy@whyuascii.com>",
  "license": "ISC",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files --config-file .swcrc",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "dev": "NODE_ENV=local tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:unit": "vitest",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "swagger": "NODE_ENV=local tsx ./src/getSwagger.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@app/auth": "workspace:*",
    "@app/database": "workspace:*",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "@app/errors": "workspace:*",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "posthog-node": "^4.4.0",
    "@app/service-contracts": "workspace:*",
    "@app/utils": "workspace:*",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.18.0",
    "@app/eslint-config": "workspace:*",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "@app/typescript-config": "workspace:*",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
