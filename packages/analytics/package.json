{
  "name": "@app/analytics",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/web.d.ts",
      "default": "./dist/web.js"
    },
    "./mobile": {
      "types": "./dist/mobile.d.ts",
      "default": "./dist/mobile.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "posthog-js": "^1.179.5",
    "posthog-react-native": "^3.3.11"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/react": "^19.0.1",
    "eslint": "^9.18.0",
    "@app/eslint-config": "workspace:*",
    "typescript": "^5.7.2",
    "@app/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-native": "*"
  }
}
