{
  "extends": "@app/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "tailwind.config": ["./tailwind.config.js"]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "nativewind-env.d.ts",
    "tailwind-variants.d.ts",
