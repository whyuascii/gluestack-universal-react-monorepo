{
  "name": "@app/core-contract",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@orpc/contract": "^1.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@app/eslint-config": "workspace:*",
    "@app/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
