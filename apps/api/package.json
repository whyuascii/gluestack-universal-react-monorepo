{
  "name": "@app/api",
  "version": "1.0.0",
  "description": "Fastify API server with oRPC contracts, Zod validation, and PostgreSQL database",
  "keywords": [
    "api",
    "fastify",
    "orpc",
    "backend",
    "zod",
    "postgresql",
    "contract-first"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:swc && pnpm run build:types",
    "build:swc": "swc src -d dist --strip-leading-paths --copy-files --config-file .swcrc",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "dev": "NODE_ENV=local tsx watch --ignore '../../packages/**/dist/**' src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:unit": "vitest",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "swagger": "NODE_ENV=local tsx ./src/getSwagger.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@app/analytics": "workspace:*",
    "@app/auth": "workspace:*",
    "@app/config": "workspace:*",
    "@app/core-contract": "workspace:*",
    "@app/database": "workspace:*",
    "@app/mailer": "workspace:*",
    "@app/notifications": "workspace:*",
    "@app/utils": "workspace:*",
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@orpc/server": "^1.0.0",
    "@polar-sh/sdk": "^0.42.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "standardwebhooks": "^1.0.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/typescript-config": "workspace:*",
    "@orpc/openapi": "^1.13.4",
    "@orpc/zod": "^1.13.4",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.6",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.18.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
