{
    "name": "api",
    "version": "1.0.0",
    "description": "Fastify API server with Zod validation and PostgreSQL database",
    "keywords": [
        "api",
        "fastify",
        "backend",
        "zod",
        "postgresql"
    ],
    "author": "whyuascii <eddy@whyuascii.com>",
    "license": "ISC",
    "private": true,
    "main": "./dist/index.js",
    "types": "./src/index.ts",
    "files": [
        "dist",
        "src"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "swc src -d dist --strip-leading-paths",
        "build:debug": "swc src -d dist --strip-leading-paths --source-maps",
        "dev": "NODE_ENV=local nodemon",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vitest",
        "test:unit": "vitest",
        "coverage": "vitest --coverage",
        "typecheck": "tsc --noEmit",
        "swagger": "npm run build && NODE_ENV=local tsx ./src/getSwagger.ts",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@fastify/auth": "^5.0.2",
        "@fastify/cors": "^11.0.1",
        "@fastify/env": "^5.0.2",
        "@fastify/helmet": "^13.0.1",
        "@fastify/sensible": "^6.0.3",
        "@fastify/swagger": "^9.5.0",
        "@types/jsonwebtoken": "^9.0.5",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "fastify-plugin": "^5.0.1",
        "fastify-type-provider-zod": "^6.1.0",
        "pino": "^10.1.0",
        "zod": "^4.1.3",
        "database": "workspace:*",
        "errors": "workspace:*",
        "utils": "workspace:*",
        "service-contracts": "workspace:*"
    },
    "devDependencies": {
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.6",
        "@types/node": "^24.10.2",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.18.0",
        "eslint-config": "workspace:*",
        "nodemon": "^3.1.9",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-config": "workspace:*",
        "vitest": "^4.0.15"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=9.0.0"
    }
}
